<html lang="en">
  <head>
    <%= render "head", metadata: site.metadata, title: page.data.title %>
  </head>
  <body class="<%= page.data.layout %> <%= page.data.page_class %>">
    <%= render "navbar", metadata: site.metadata, page: page %>
    <main>
      <%= yield %>
      <h1><%= page.data.layout %></h1>
    </main>
    <%= render "footer", metadata: site.metadata %>
  </body>
</html>
